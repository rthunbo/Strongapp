<div class="card">
    <div class="card-body">
        <div class="float-end">
            <a href="@EditUrl" class="btn btn-primary">
                <i class="fas fa-edit"></i>
            </a>
            <button @onclick="Remove" class="btn btn-danger">
                <i class="fas fa-trash"></i>
            </button>
        </div>
        <h5 class="card-title">@Title</h5>
        <p class="card-text">@SubTitle</p>
        @ChildContent
    </div>
</div>